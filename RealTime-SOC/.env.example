# =============================================================================
# RealTime-SOC Environment Configuration
# Copy this file to .env and fill in your secrets.
# NEVER commit .env to version control.
# =============================================================================

# ----- Wazuh Credentials -----
INDEXER_USERNAME=admin
INDEXER_PASSWORD=SecretPassword           # Change in production!
WAZUH_API_PASSWORD=SecretPassword        # Change in production!
WAZUH_REGISTRATION_PASSWORD=SecretPassword

# ----- Telegram Bot -----
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
TELEGRAM_CHAT_ID=YOUR_TELEGRAM_CHAT_ID

# ----- Discord Webhook -----
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# ----- Alert Tuning -----
# Minimum Wazuh alert level to trigger Telegram/Discord notifications
MIN_ALERT_LEVEL=7

# ----- Incident Reports Output -----
REPORTS_DIR=/var/ossec/logs/incident_reports

# ----- Simulation Targets (for testing only) -----
TARGET_HOST=localhost
SSH_PORT=22
TARGET_USER=testuser
